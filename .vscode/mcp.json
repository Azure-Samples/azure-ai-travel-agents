{
  "inputs": [{
    "id": "toolEchoPingAccessToken",
    "type": "promptString",
    "description": "Enter the authorization token for the MCP server",
    "password": true
  }],
  "servers": {
    "mcp-echo-ping": {
      "headers": {
        "Authorization": "Bearer ${input:toolEchoPingAccessToken}",
      },
      "type": "http",
      "url": "http://localhost:5004/mcp"
    },
    "mcp-itinerary-planning": {
      "type": "http",
      "url": "http://localhost:5003/mcp"
    },
    "mcp-destination-recommendation": {
      "type": "http",
      "url": "http://localhost:5002/mcp"
    },
    "mcp-customer-query": {
      "type": "http",
      "url": "http://localhost:5001/mcp"
    }
  }
}
